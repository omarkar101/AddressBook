@model AddressBook.Models.Organization

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Organization</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
            <br />
            @Html.DisplayNameFor(model => model.Address)
            <br />
            @Html.DisplayNameFor(model => model.PhoneNumber)
            <br />
            @Html.DisplayNameFor(model => model.People)
            <br />
            <a asp-controller="People" asp-action="Create" asp-route-OrgId="@Model.Id"><input id="AddNewPerson" type="button" value="New Person" class="btn btn-primary"/></a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
            <br/>
            @Html.DisplayFor(model => model.Address)
            <br/>
            @Html.DisplayFor(model => model.PhoneNumber)
            <br/>
            <table class="table">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Name")
                    </th>
                    <th>
                        @Html.DisplayName("Phone Number")
                    </th>
                    <th>
                        @Html.DisplayName("Address")
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.People) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            <a asp-controller="People" asp-action="Edit" asp-route-id="@item.Id" asp-route-OrgId="@Model.Id">Edit</a> |
                            <a asp-controller="People" asp-action="Delete" asp-route-id="@item.Id" asp-route-OrgId="@Model.Id">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            <br/>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
